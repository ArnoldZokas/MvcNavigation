@using MvcNavigation

<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/css/master.css")" rel="stylesheet" type="text/css" />
</head>
	<body>
		<div id="content">
			@RenderBody()
		</div>
		<div class="navigation">
			<pre><code>Default navigation: @@Html.Menu()</code></pre>
			@Html.Menu()
		</div>
		<div class="navigation">
			<pre><code>Default navigation (rendered via partial view): @@Html.Menu()</code></pre>
			@{ Html.RenderPartial("HeaderContainer"); }
		</div>
		<div class="navigation">
			<pre><code>Default navigation (rendered via child action): @@Html.Menu()</code></pre>
			@{ Html.RenderAction("Navigation", "Home", new { area = "" }); }
		</div>
		<div class="navigation multi-level">
			<pre><code>Two-level horizontal navigation: @@Html.Menu(maxLevels: 2)</code></pre>
			@Html.Menu(maxLevels: 2)
		</div>
		<div class="navigation dropdown">
			<pre><code>Two-level dropdown navigation: @@Html.Menu(maxLevels: 2, renderAllLevels: true)</code></pre>
			@Html.Menu(maxLevels: 2, renderAllLevels: true)
		</div>
	</body>
</html>
